# ===========================================
# Berta1Clarity Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# -------------------------------------------
# AIRTABLE
# -------------------------------------------
# Get from: https://airtable.com/create/tokens
AIRTABLE_API_KEY=pat...

# Your Airtable base ID (starts with "app")
# Find in the URL: https://airtable.com/appXXXXXXXXXXXXXX
AIRTABLE_BASE_ID=app...

# -------------------------------------------
# BREVO (Email)
# -------------------------------------------
# Get from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=xkeysib-...

# Email template IDs (create in Brevo dashboard)
BREVO_TEMPLATE_MAGIC_LINK=37
BREVO_TEMPLATE_WELCOME=38
BREVO_TEMPLATE_LICENSE_PURCHASED=39
BREVO_TEMPLATE_LICENSE_KEY=40

# Newsletter list ID
BREVO_NEWSLETTER_LIST_ID=16

# -------------------------------------------
# STRIPE (Payments)
# -------------------------------------------
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_...

# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# Price IDs (create products in Stripe dashboard)
STRIPE_STARTER_PRICE_ID=price_...
STRIPE_PRO_PRICE_ID=price_...
STRIPE_AGENCY_PRICE_ID=price_...

# -------------------------------------------
# APP CONFIGURATION
# -------------------------------------------
# Your production URL (no trailing slash)
APP_URL=https://clarity.berta.one

# Generate a random 32-character string for session encryption
# You can use: openssl rand -hex 16
SESSION_SECRET=your-32-character-random-string

# -------------------------------------------
# OPTIONAL: Rate Limiting
# -------------------------------------------
# Max requests per minute for auth endpoints
RATE_LIMIT_AUTH=5

# Max requests per minute for newsletter
RATE_LIMIT_NEWSLETTER=3
